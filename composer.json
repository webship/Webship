{
  "name": "webship/webship",
  "description": "Helps in speeding up the work of web developers to ship websites in a swift way.",
  "type": "drupal-profile",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Webship",
      "homepage": "https://www.drupal.org/webship",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "http://drupal.org/project/issues/webship",
    "source": "http://cgit.drupalcode.org/webship"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "require": {
    "composer/installers": "~1.0",
    "oomphinc/composer-installers-extender": "~1.0",
    "cweagans/composer-patches": "~1.0",
    "drupal/core-composer-scaffold": "^8.8.0",
    "drupal/drupal-library-installer-plugin": "^0.3",
    "webflo/drupal-finder": "~1.0",
    "drupal/core": "^8.8.0",
    "drupal/webdev": "8.1.x-dev",
    "drupal/webadmin": "8.1.x-dev",
    "drupal/webpage": "8.2.x-dev",
    "drupal/webtheme": "8.2.x-dev",
    "drupal/webform": "~5.0",
    "drupal/vartheme_claro": "^8.1"
  },
  "require-dev": {
    "drupal/webtest": "8.1.x-dev"
  },
  "config": {
    "bin-dir": "bin/",
    "secure-http": false,
    "preferred-install": {
      "drupal/core": "dist"
    }
  },
  "autoload": {
    "psr-4": {
      "Webship\\composer\\": "src/composer"
    }
  },
  "scripts": {
    "pre-install-cmd": ["Webship\\composer\\Procedures::checkComposerVersionProcedure"],
    "pre-update-cmd": ["Webship\\composer\\Procedures::checkComposerVersionProcedure"],
    "post-install-cmd": [
      "Webship\\composer\\Procedures::createRequiredFilesProcedure",
      "Webship\\composer\\Procedures::removeGitDirectoriesProcedure",
      "@composer drupal-scaffold",
      "./bin/phing push"
    ],
    "post-update-cmd": [
      "Webship\\composer\\Procedures::createRequiredFilesProcedure",
      "Webship\\composer\\Procedures::removeGitDirectoriesProcedure",
      "@composer drupal-scaffold",
      "./bin/phing push"
    ]
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    },
    "installer-types": [
      "bower-asset",
      "npm-asset"
    ],
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-profile"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "drupal-libraries": {
      "library-directory": "web/libraries",
      "libraries": []
    },
    "enable-patching": true,
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
       "drupal/core": "-p2"
    }
  }
}